<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KgToGram"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi Kg sang G"
        android:textSize="35dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/kgtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:background="@drawable/customedittext"/>

    <Button
        android:id="@+id/kg_converter"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Đổi Kg sang G"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/kg_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="0 G"
        android:textSize="15dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/pound"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/pound" />

        <ImageView
            android:id="@+id/length"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/length" />

        <ImageView
            android:id="@+id/temp"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/celcius" />

    </LinearLayout>
</LinearLayout>